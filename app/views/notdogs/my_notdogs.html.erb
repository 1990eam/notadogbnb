<div class="container mt-5">
  <h2 class="main-header">My Notdogs</h2>
   <% @notdogs.each do | notdog | %>
      <div class="card-notdog my-3 d-flex">
        <img class="card-notdog-img", src=<%= cl_image_path notdog.photo.key, height: 400, width: 500, crop: :fill %> >
        <div class="card-notdog-infos">
          <%= link_to notdog.name, notdog_path(notdog), class: "main-header" %>
        </div>
        <div class="d-flex align-items-end m-3">
          <%= link_to "", notdog_path(notdog), method: :delete, data: { confirm: 'Are you certain you want to delete this Notdog?' }, class: "fas fa-trash-alt px-3" %>
          <%= link_to "", edit_notdog_path(notdog), class: "fas fa-pencil-alt" %>
        </div>
      </div>
    <% end %>
</div>
