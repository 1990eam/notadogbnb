<div class="container show-container">
  <h1 class="orange"><%= @notdog.name %></h1>
  <div class="row show-row">
    <div class="col-lg-3 col-6">

      <!-- Card -->
          <div class="card-notdog-show mb-3">
            <img src=<%= cl_image_path @notdog.photo.key, height: 500, width: 700, crop: :fill %> >
            <div class="card-notdog-infos-show">
              <div>
                <p class="text-black-50"><%= @notdog.taxonomy_fantasy_name %> (<%= @notdog.taxonomy_name %>)</p>
                <h2><%= link_to @notdog.name, notdog_path(@notdog), class: "orange" %></h2>
                <p><%= @notdog.description %></p>
              </div>
                  <p class="card-notdog-pricing-show">USD$<%= @notdog.cost_per_day %></p>
            </div>

            <div class="book-button">
              <% if @notdog.owner != current_user %>
                <%= link_to "Book this Notdog", new_notdog_booking_path(@notdog), class: "btn btn-primary book-button" %>
              <% end %>
            </div>
          </div>
    </div>

      <!-- Details & Map -->
    <div class="card">

      <div class="col-log-4 details p-3">
        <h2 class="text-left orange">Other details:</h2>
        <p>Owner: <%= @notdog.owner.name %> </p>
        <p>Fantasy name: <%= @notdog.taxonomy_fantasy_name %></p>
        <p>Cost per day: <%= @notdog.cost_per_day %></p>
        <p>Location: <%= @notdog.address %></p>
        <p>Reviews: <i class="fas fa-star" style="color: #ffcd3c"></i> <%= @notdog.average_score %></p>
        <p><%= link_to "See reviews", notdog_reviews_path(@notdog), class: "orange" %>
        <br>
        <%= link_to "Back to index", notdogs_path, class: "orange" %></p>
      <div id="map-card"
        style="width: 25vw; height: 25vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV["MAPBOX_API_KEY"] %>">
      </div>
      <div>
        <% if policy(@notdog).destroy? %>
          <%= link_to "", notdog_path(@notdog), method: :delete, data: { confirm: 'Are you certain you want to delete this Notdog?' }, class: "fas fa-trash-alt px-3 orange" %>
        <% end %>

        <% if policy(@notdog).update? %>
          <%= link_to "", edit_notdog_path(@notdog), class: "fas fa-pencil-alt orange" %>
        <% end %>
      </div>
    </div>

      <!-- Update & Delete -->


    </div>

  </div>
</div>


<%= render "messages" %>




